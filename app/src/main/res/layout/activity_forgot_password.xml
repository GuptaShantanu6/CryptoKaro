<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_emailHeading_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="50dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_emailHeading_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="80dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_emailHeading_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_emailHeading_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="250dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_emailHeading_top"
        app:layout_constraintBottom_toTopOf="@id/guideline_emailHeading_bottom"
        app:layout_constraintStart_toStartOf="@id/guideline_emailHeading_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_emailHeading_end"
        android:fontFamily="@font/poppins"
        android:textColor="#666666"
        android:text="Email Address"
        android:textSize="20sp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_emailfield_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="135dp" />

    <EditText
        android:id="@+id/emailResetField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/guideline_emailHeading_start"
        app:layout_constraintTop_toBottomOf="@id/guideline_emailHeading_bottom"
        app:layout_constraintBottom_toTopOf="@id/guideline_emailfield_bottom"
        app:layout_constraintEnd_toEndOf="@id/guideline_emailField_end"
        android:backgroundTint="#FF4B3A"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@drawable/edittext_cursor_register"
        android:textStyle="bold"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_emailField_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="370dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_emailreset_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="220dp" />

    <View
        android:id="@+id/emailResetView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/guideline_emailHeading_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_emailField_end"
        app:layout_constraintTop_toBottomOf="@id/guideline_emailreset_top"
        app:layout_constraintBottom_toTopOf="@id/guideline_emailreset_bottom"
        android:background="@drawable/rounded_rectangle_orange"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/emailResetView"
        app:layout_constraintBottom_toBottomOf="@id/emailResetView"
        app:layout_constraintStart_toStartOf="@id/emailResetView"
        app:layout_constraintEnd_toEndOf="@id/emailResetView"
        android:textSize="17sp"
        android:fontFamily="@font/poppins"
        android:textColor="#ffffff"
        android:text="Send Password Reset Email"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_emailreset_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="270dp" />


</androidx.constraintlayout.widget.ConstraintLayout>