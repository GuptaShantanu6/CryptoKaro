<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar"/>
    
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameHome"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="unlabeled"
        android:background="#F2F2F2"
        android:elevation="30dp"
        app:elevation="0dp"
        app:itemIconTint="@color/bottom_nav_color"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fabStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.78"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fabTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fabBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/fabTop"
        app:layout_constraintBottom_toBottomOf="@id/fabBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/fabStart"
        android:backgroundTint="#3055BD"
        app:tint="#F2F2F2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/RevealLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF4B3A"
        android:visibility="gone">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profileTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.20"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profileBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.30"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/coursesTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/coursesBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/helpTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.50"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/helpBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.60"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/logOutTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.88" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/logOutBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/logOutStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/logOutEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>

        <View
            android:id="@+id/pButtonReveal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/profileTop"
            app:layout_constraintBottom_toTopOf="@id/profileBottom"
            app:layout_constraintStart_toEndOf="@id/rStart"
            app:layout_constraintEnd_toStartOf="@id/rEnd"
            android:background="@drawable/gradient_rounded_rectangle"
            android:elevation="10dp"/>

        <View
            android:id="@+id/cButtonReveal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/coursesTop"
            app:layout_constraintBottom_toTopOf="@id/coursesBottom"
            app:layout_constraintStart_toEndOf="@id/rStart"
            app:layout_constraintEnd_toStartOf="@id/rEnd"
            android:background="@drawable/gradient_rounded_rectangle"
            android:elevation="10dp"/>

        <View
            android:id="@+id/hButtonReveal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/helpTop"
            app:layout_constraintBottom_toTopOf="@id/helpBottom"
            app:layout_constraintStart_toEndOf="@id/rStart"
            app:layout_constraintEnd_toStartOf="@id/rEnd"
            android:background="@drawable/gradient_rounded_rectangle"
            android:elevation="10dp"/>

        <View
            android:id="@+id/logOutBtnReveal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/logOutTop"
            app:layout_constraintBottom_toTopOf="@id/logOutBottom"
            app:layout_constraintStart_toEndOf="@id/logOutStart"
            app:layout_constraintEnd_toStartOf="@id/logOutEnd"
            android:background="@drawable/gradient_rounded_rectangle"
            android:foreground="@drawable/view_background_ripple"
            android:elevation="10dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/textRevealStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.16"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/textRevealEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.83"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ptextRevealTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.22"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ptextRevealBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.28" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ctextRevealTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.37"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ctextRevealBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.43"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cryptoListTextTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.52"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cryptoListTextBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.58"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/poppins"
            android:textColor="#ff4b3a"
            app:layout_constraintStart_toStartOf="@id/textRevealStart"
            app:layout_constraintEnd_toEndOf="@id/textRevealEnd"
            app:layout_constraintTop_toBottomOf="@id/ptextRevealTop"
            app:layout_constraintBottom_toTopOf="@id/ptextRevealBottom"
            android:text="My Profile"
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:elevation="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/poppins"
            android:textColor="#ff4b3a"
            app:layout_constraintStart_toStartOf="@id/logOutEnd"
            app:layout_constraintEnd_toEndOf="@id/textRevealEnd"
            app:layout_constraintTop_toBottomOf="@id/ptextRevealTop"
            app:layout_constraintBottom_toTopOf="@id/ptextRevealBottom"
            android:text=">"
            android:gravity="center"
            android:textSize="25sp"
            android:elevation="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/poppins"
            android:textColor="#ff4b3a"
            app:layout_constraintStart_toStartOf="@id/textRevealStart"
            app:layout_constraintEnd_toEndOf="@id/textRevealEnd"
            app:layout_constraintTop_toBottomOf="@id/ctextRevealTop"
            app:layout_constraintBottom_toTopOf="@id/ctextRevealBottom"
            android:text="My Courses"
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:elevation="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/poppins"
            android:textColor="#ff4b3a"
            app:layout_constraintStart_toStartOf="@id/logOutEnd"
            app:layout_constraintEnd_toEndOf="@id/textRevealEnd"
            app:layout_constraintTop_toBottomOf="@id/ctextRevealTop"
            app:layout_constraintBottom_toTopOf="@id/ctextRevealBottom"
            android:text=">"
            android:gravity="center"
            android:textSize="25sp"
            android:elevation="10dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/logOutTextStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.32"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/logOutTextEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.68"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/logOutTextTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.895"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/logOutTextBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.935"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cryptoListTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cryptoListBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/htextRevealTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.67"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/htextRevealBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.73"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/cryptoListTop"
            app:layout_constraintBottom_toTopOf="@id/cryptoListBottom"
            app:layout_constraintStart_toStartOf="@id/rStart"
            app:layout_constraintEnd_toEndOf="@id/rEnd"
            android:background="@drawable/gradient_rounded_rectangle"
            android:elevation="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/cryptoListTextTop"
            app:layout_constraintBottom_toBottomOf="@id/cryptoListTextBottom"
            app:layout_constraintStart_toStartOf="@id/textRevealStart"
            app:layout_constraintEnd_toEndOf="@id/textRevealEnd"
            android:fontFamily="@font/poppins"
            android:textColor="#FF4B3A"
            android:textSize="25sp"
            android:text="Current Prices"
            android:elevation="10dp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/poppins"
            android:textColor="#ff4b3a"
            app:layout_constraintStart_toStartOf="@id/textRevealStart"
            app:layout_constraintEnd_toEndOf="@id/textRevealEnd"
            app:layout_constraintTop_toBottomOf="@id/htextRevealTop"
            app:layout_constraintBottom_toTopOf="@id/htextRevealBottom"
            android:text="Need Help ?"
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:elevation="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/poppins"
            android:textColor="#ff4b3a"
            app:layout_constraintStart_toStartOf="@id/logOutEnd"
            app:layout_constraintEnd_toEndOf="@id/textRevealEnd"
            app:layout_constraintTop_toBottomOf="@id/htextRevealTop"
            app:layout_constraintBottom_toTopOf="@id/htextRevealBottom"
            android:text=">"
            android:gravity="center"
            android:textSize="25sp"
            android:elevation="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/logOutEnd"
            app:layout_constraintEnd_toEndOf="@id/textRevealEnd"
            app:layout_constraintTop_toTopOf="@id/cryptoListTextTop"
            app:layout_constraintBottom_toBottomOf="@id/cryptoListTextBottom"
            android:textColor="#FF4B3A"
            android:gravity="center"
            android:text=">"
            android:elevation="10dp"
            android:fontFamily="@font/poppins"
            android:textSize="25sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/logOutTextTop"
            app:layout_constraintBottom_toBottomOf="@id/logOutTextBottom"
            app:layout_constraintStart_toStartOf="@id/logOutTextStart"
            app:layout_constraintEnd_toEndOf="@id/logOutTextEnd"
            android:fontFamily="@font/poppins"
            android:textColor="#ff4b3a"
            android:text="Log Out"
            android:gravity="center"
            android:textSize="20sp"
            android:elevation="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>