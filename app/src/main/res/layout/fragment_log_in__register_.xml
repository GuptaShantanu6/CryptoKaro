<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_textHeading_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.07"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_textHeading_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.49"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_textHeadingEmail_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="40dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_textHeadingEmail_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="60dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_textfield_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.93"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_emailfield_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="115dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_passwordHeading_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="140dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_passwordHeading_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="160dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_passwordField_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="215dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_forgotPass_text_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="230dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_forgotPass_text_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="260dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_loginBtn_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="300dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_loginBtn_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="350dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_loginBtn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_loginBtn_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.76"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/poppins"
                android:text="Email Address"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/guideline_textHeadingEmail_bottom"
                app:layout_constraintEnd_toEndOf="@id/guideline_textHeading_end"
                app:layout_constraintStart_toStartOf="@id/guideline_textHeading_start"
                app:layout_constraintTop_toBottomOf="@id/guideline_textHeadingEmail_top"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/emailLogInRegisterEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="#FF4B3A"
                android:fontFamily="@font/poppins"
                android:inputType="textEmailAddress"
                android:textCursorDrawable="@drawable/edittext_cursor_register"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/guideline_emailfield_bottom"
                app:layout_constraintEnd_toEndOf="@id/guideline_textfield_end"
                app:layout_constraintStart_toStartOf="@id/guideline_textHeading_start"
                app:layout_constraintTop_toBottomOf="@id/guideline_textHeadingEmail_bottom" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/poppins"
                android:text="Password"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/guideline_passwordHeading_bottom"
                app:layout_constraintEnd_toEndOf="@id/guideline_textHeading_end"
                app:layout_constraintStart_toStartOf="@id/guideline_textHeading_start"
                app:layout_constraintTop_toBottomOf="@id/guideline_passwordHeading_top"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/passwordLogInRegisterEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/guideline_passwordHeading_bottom"
                app:layout_constraintBottom_toTopOf="@id/guideline_passwordField_bottom"
                app:layout_constraintStart_toStartOf="@id/guideline_textHeading_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_textfield_end"
                android:backgroundTint="#FF4B3A"
                android:fontFamily="@font/poppins"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/edittext_cursor_register"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/forgotPasswordText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/guideline_textHeading_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_textfield_end"
                app:layout_constraintBottom_toBottomOf="@id/guideline_forgotPass_text_bottom"
                app:layout_constraintTop_toBottomOf="@id/guideline_forgotPass_text_top"
                android:fontFamily="@font/poppins"
                android:textColor="#FF4B3A"
                android:textStyle="bold"
                android:text="Forgot Password ?"
                android:textSize="18sp"/>

            <View
                android:id="@+id/register_login_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/guideline_loginBtn_top"
                app:layout_constraintBottom_toTopOf="@id/guideline_loginBtn_bottom"
                app:layout_constraintStart_toStartOf="@id/guideline_loginBtn_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_loginBtn_end"
                android:background="@drawable/rounded_rectangle_orange"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/register_login_view"
                app:layout_constraintBottom_toBottomOf="@id/register_login_view"
                app:layout_constraintStart_toStartOf="@id/register_login_view"
                app:layout_constraintEnd_toEndOf="@id/register_login_view"
                android:fontFamily="@font/poppins"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="Login"
                android:textSize="17sp"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="380dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>