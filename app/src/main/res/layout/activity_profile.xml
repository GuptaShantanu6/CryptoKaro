<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="#F2F2F2">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/myProfileTextTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/myProfileTextBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.23"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/myProfileTextStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/myProfileTextTopEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/myProfileTextStart"
        app:layout_constraintEnd_toEndOf="@id/myProfileTextTopEnd"
        app:layout_constraintTop_toTopOf="@id/myProfileTextTop"
        app:layout_constraintBottom_toBottomOf="@id/myProfileTextBottom"
        android:fontFamily="@font/poppins"
        android:textColor="#000000"
        android:text="My profile"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:elevation="10dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profileViewTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.29"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profileViewBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.89"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/profileViewTop"
        app:layout_constraintBottom_toBottomOf="@id/profileViewBottom"
        app:layout_constraintStart_toStartOf="@id/myProfileTextStart"
        app:layout_constraintEnd_toEndOf="@id/myProfileTextTopEnd"
        android:background="@drawable/rounded_rectangle_white"
        android:elevation="10dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profileImageTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profileImageBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profileImageStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profileImageEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/profileImageTop"
        app:layout_constraintBottom_toBottomOf="@id/profileImageBottom"
        app:layout_constraintStart_toStartOf="@id/profileImageStart"
        app:layout_constraintEnd_toEndOf="@id/profileImageEnd"
        android:elevation="10dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profileBackEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.22"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profileBackTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profileBackBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/profileBackTop"
        app:layout_constraintBottom_toBottomOf="@id/profileBackBottom"
        app:layout_constraintStart_toStartOf="@id/myProfileTextStart"
        app:layout_constraintEnd_toEndOf="@id/profileBackEnd"
        android:src="@drawable/ic_left_arrow"
        app:tint="#000000" />

</androidx.constraintlayout.widget.ConstraintLayout>