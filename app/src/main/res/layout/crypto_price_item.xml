<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F2F2">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/itemTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="15dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/itemStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/itemEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/itemBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="80dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/itemTop"
        app:layout_constraintBottom_toTopOf="@id/itemBottom"
        app:layout_constraintStart_toStartOf="@id/itemStart"
        app:layout_constraintEnd_toEndOf="@id/itemEnd"
        android:background="@drawable/rounded_rectangle_white"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cryptoImageStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="25dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cryptoImageEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="75dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cryptoImageTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="23dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cryptoImageBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="72dp"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cryptoImageTop"
        app:layout_constraintBottom_toTopOf="@id/cryptoImageBottom"
        app:layout_constraintStart_toStartOf="@id/cryptoImageStart"
        app:layout_constraintEnd_toEndOf="@id/cryptoImageEnd"
        android:src="@drawable/ic_loading"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cryptoNameStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="82dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cryptoNameEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="130dp"/>

    <TextView
        android:id="@+id/cryptoNameViewInLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/cryptoNameStart"
        app:layout_constraintEnd_toEndOf="@id/cryptoNameEnd"
        app:layout_constraintTop_toBottomOf="@id/cryptoImageTop"
        app:layout_constraintBottom_toTopOf="@id/cryptoImageBottom"
        android:gravity="center"
        android:fontFamily="@font/poppins"
        android:text="Bitcoin"
        android:textColor="#FF4B3A"
        android:textSize="25sp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cryptoPriceStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="130dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cryptoPriceEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="17dp"/>

    <TextView
        android:id="@+id/cryptoPriceViewInLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cryptoImageTop"
        app:layout_constraintBottom_toTopOf="@id/cryptoImageBottom"
        app:layout_constraintStart_toStartOf="@id/cryptoPriceStart"
        app:layout_constraintEnd_toEndOf="@id/cryptoPriceEnd"
        android:gravity="center"
        android:fontFamily="@font/poppins"
        android:textColor="#000000"
        android:text="2500000â‚¹"
        android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>